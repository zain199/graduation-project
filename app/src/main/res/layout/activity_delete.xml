<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client_tasks.profileTaps.deleteActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Delete Children"
        android:padding="8dp"
        >
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

                <RelativeLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >


                    <TextView
                        android:id="@+id/txt_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="ID : "
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/ed_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_id"
                        android:layout_marginLeft="40dp"
                        android:hint="Enter ID To Delete"
                        android:textSize="20dp"
                        />

                    <View
                        android:id="@+id/v9"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/ed_id"
                        android:layout_marginTop="4dp"
                        />

                    <Button
                        android:id="@+id/btn_add_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v9"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:text="Delete"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />

                </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>