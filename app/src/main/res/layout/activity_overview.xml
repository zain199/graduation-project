<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/custom_background_botom"
    tools:context=".client_tasks.profileTaps.overviewActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_signup2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:paddingLeft="42dp"
        app:title="Card Information"
        app:titleTextColor="#ffff" />

    <TextView
        android:id="@+id/parentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_signup2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:elevation="8dp"

        android:text="Parent Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#ffff"
        android:textSize="24sp"
        />

    <View
        android:id="@+id/v8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/parentName"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/test_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v8"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"

        android:text="Id O Card"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#ffff"
        android:textSize="24sp"
         />


    <EditText
        android:id="@+id/parentIDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_id"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/txt_id"
        android:background="@drawable/oval_shape2"
        android:drawableLeft="@android:drawable/ic_dialog_map"
        android:drawablePadding="4dp"
        android:elevation="8dp"
        android:enabled="false"
        android:hint="id card" />

    <View
        android:id="@+id/v9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/parentIDet"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/test_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v9"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"

        android:text="Points"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#ffff"
        android:textSize="24sp"
        />


    <EditText
        android:id="@+id/parentPointset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_points"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/oval_shape2"
        android:drawableLeft="@android:drawable/ic_menu_compass"
        android:drawablePadding="4dp"
        android:elevation="8dp"
        android:enabled="false"
        android:hint="points"
        android:singleLine="true" />

    <TextView
        android:id="@+id/test_login22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentPointset"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"

        android:text="Children Information"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#ffff"
        android:textSize="24sp"
         />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/test_login22"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/test_login22"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:elevation="8dp"
        android:fontFamily="cursive"
        android:text="No Childerns"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#ffff"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        android:visibility="gone" />


</RelativeLayout>