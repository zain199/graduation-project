<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller_tasks.AddItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_add"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="42dp"
                android:scrollbars="none"
                app:title="Add Item Store"
                app:titleTextColor="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_name_unit_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar_add"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:text="name : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_name_unit_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar_add"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/txt_name_unit_store"
                android:ems="10"
                android:hint="Item name"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />

            <TextView
                android:id="@+id/txt_point_unit_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_name_unit_store"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="22dp"
                android:text="Points : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_point_unit_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_name_unit_store"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/txt_point_unit_store"
                android:ems="10"

                android:hint="points"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />


            <TextView
                android:id="@+id/txt_all_unit_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_point_unit_store"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:text="number of items : "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_all_unit_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ed_point_unit_store"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_toRightOf="@id/txt_all_unit_store"

                android:ems="10"
                android:hint="number "
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorAccent" />

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ed_all_unit_store"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btn_select_img_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:onClick="select"
                android:text="select photo of item " />

            <ImageView
                android:id="@+id/img_unit_store"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/btn_select_img_unit"
                android:layout_marginTop="22dp"
                android:src="@drawable/img_no" />


            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_unit_store"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:onClick="addNewItem"
                android:text="add item" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>