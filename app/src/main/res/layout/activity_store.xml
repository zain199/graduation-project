<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    tools:context=".seller_tasks.StoreActivity">


    <RelativeLayout
        android:id="@+id/rel5"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="-120dp"
        android:background="@drawable/search_shape">

<!--        <androidx.appcompat.widget.SearchView-->
<!--            android:id="@+id/search_store"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="30dp"-->
<!--            android:layout_marginTop="120dp"-->
<!--            android:layout_marginRight="30dp" />-->

        <TextView
            android:id="@+id/txt_cart_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="42sp"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/colorAccent"
           android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="S t o r e"
            android:textStyle="bold"
            android:fontFamily="cursive"
            />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_store"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel5"
        android:layout_marginBottom="?actionBarSize"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:id="@+id/show_rel"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:id="@+id/txt_item_num"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@drawable/oval_shape"
            android:paddingTop="7dp"
            android:text="0"
            android:paddingLeft="19dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_item_price"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"

            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/oval_shape"
            android:paddingTop="7dp"
            android:text="0.0 point"
            android:paddingLeft="16dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:onClick="gotoChart"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/colorAccent"
            android:layout_centerInParent="true"
            android:text="Show Cart" />
    </RelativeLayout>
</RelativeLayout>